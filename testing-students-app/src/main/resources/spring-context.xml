<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

        <context:property-placeholder location="application.properties"/>

        <bean id="questionExtractorServiceBean" scope="singleton" class="ru.pipko.otus.homework.service.QuestionExtractorService">
            <constructor-arg name="csvFileName" value="${csv.file.name}"/>
        </bean>

        <bean id="questionDaoSimpleBean" scope="singleton" class="ru.pipko.otus.homework.dao.QuestionDaoSimple">
            <constructor-arg name="questionsExtractor" ref="questionExtractorServiceBean"/>
        </bean>
</beans>